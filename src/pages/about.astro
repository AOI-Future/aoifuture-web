---
import Layout from '../layouts/Layout.astro';
import LifeGame from '../components/LifeGame';

// ===== EDIT HERE =====
const labelInfo = {
  name: 'AOIFUTURE',
  nameJa: 'アオイフューチャー', // 正式名称
  tagline: 'Creating Digital Realities',
  description: `
    AOIFUTUREは、人間とAIの創造性が交差する地点で
    新しいデジタルリアリティを構築するクリエイティブレーベルです。
  `,
  founded: '2024',
  location: {
    postal: '150-0043',
    address: '1-10-8 Dougenzaka Shibuya-ku Tokyo, Japan',
    building: 'Shibuya Dougenzaka Tokyu Building 2F-C',
  },
  contact: {
    email: 'contact@aoifuture.com',
    // phone: '080-8727-8530', //
  },
  social: {
    // twitter: 'https://twitter.com/shugo',
    // instagram: 'https://instagram.com/shugo',
    // github: 'https://github.com/0xshugo',
  },
};
// =====================
---

<Layout title="About | Aoifuture">
  <main class="relative min-h-screen">
    <!-- Life Game Background -->
    <LifeGame client:load />

    <!-- Back Button -->
    <a
      href="/"
      class="fixed top-4 left-4 md:top-6 md:left-6 z-50
             px-3 py-2 text-sm
             border border-cyan-400/50 bg-black/50
             text-cyan-400 font-mono tracking-widest
             hover:bg-cyan-400/10 hover:border-cyan-400
             transition-colors duration-300"
    >
      {'<'} BACK
    </a>

    <!-- Main Content -->
    <div class="relative z-10 min-h-screen flex flex-col items-center justify-center px-4 py-20">
      <!-- Header -->
      <div class="text-center mb-12">
        <div class="inline-block px-4 py-2 border border-cyan-400/50 bg-black/50 mb-4">
          <span class="text-cyan-400/60 font-mono text-xs">SYSTEM.INFO</span>
        </div>

        <h1 class="text-4xl md:text-6xl font-mono text-cyan-400 tracking-widest glow">
          {labelInfo.name}
        </h1>

        <p class="mt-4 text-sm md:text-base text-cyan-400/60 font-mono tracking-wider">
          {labelInfo.tagline}
        </p>
      </div>

      <!-- Info Card -->
      <div class="glass p-6 md:p-10 max-w-2xl w-full border border-cyan-400/30">
        <!-- Description -->
        <section class="mb-8">
          <h2 class="text-cyan-400 font-mono text-sm mb-3 flex items-center gap-2">
            <span class="text-cyan-400/40">//</span> ABOUT
          </h2>
          <p class="text-cyan-400/80 font-mono text-sm md:text-base leading-relaxed whitespace-pre-line">
            {labelInfo.description.trim()}
          </p>
        </section>

        <!-- Company Info -->
        <section class="mb-8">
          <h2 class="text-cyan-400 font-mono text-sm mb-3 flex items-center gap-2">
            <span class="text-cyan-400/40">//</span> ENTITY
          </h2>
          <div class="space-y-2 font-mono text-sm">
            <div class="flex">
              <span class="text-cyan-400/40 w-24 shrink-0">NAME:</span>
              <span class="text-cyan-400/80">{labelInfo.nameJa}</span>
            </div>
            <div class="flex">
              <span class="text-cyan-400/40 w-24 shrink-0">FOUNDED:</span>
              <span class="text-cyan-400/80">{labelInfo.founded}</span>
            </div>
          </div>
        </section>

        <!-- Location -->
        <section class="mb-8">
          <h2 class="text-cyan-400 font-mono text-sm mb-3 flex items-center gap-2">
            <span class="text-cyan-400/40">//</span> LOCATION
          </h2>
          <div class="font-mono text-sm text-cyan-400/80 space-y-1">
            <div>{labelInfo.location.postal}</div>
            <div>{labelInfo.location.address}</div>
            {labelInfo.location.building && <div>{labelInfo.location.building}</div>}
          </div>
        </section>

        <!-- Contact -->
        <section>
          <h2 class="text-cyan-400 font-mono text-sm mb-3 flex items-center gap-2">
            <span class="text-cyan-400/40">//</span> CONTACT
          </h2>
          <div class="space-y-2 font-mono text-sm">
            {labelInfo.contact.email && (
              <div class="flex">
                <span class="text-cyan-400/40 w-24 shrink-0">EMAIL:</span>
                <a
                  href={`mailto:${labelInfo.contact.email}`}
                  class="text-cyan-400 hover:glow transition-all"
                >
                  {labelInfo.contact.email}
                </a>
              </div>
            )}
          </div>
        </section>

        <!-- Social Links (if any) -->
        {Object.keys(labelInfo.social).length > 0 && (
          <section class="mt-8 pt-6 border-t border-cyan-400/20">
            <h2 class="text-cyan-400 font-mono text-sm mb-3 flex items-center gap-2">
              <span class="text-cyan-400/40">//</span> LINKS
            </h2>
            <div class="flex gap-4 font-mono text-sm">
              {Object.entries(labelInfo.social).map(([name, url]) => (
                <a
                  href={url as string}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-cyan-400/60 hover:text-cyan-400 hover:glow transition-all uppercase"
                >
                  [{name}]
                </a>
              ))}
            </div>
          </section>
        )}
      </div>

      <!-- Footer Note -->
      <div class="mt-8 text-center">
        <span class="text-cyan-400/30 font-mono text-xs">
          {'<'} DATA.UPDATED: 2024 {'>'}
        </span>
      </div>
    </div>

    <!-- Corner Decoration (hidden on mobile) -->
    <div class="hidden md:block fixed bottom-6 right-6 z-50
                text-cyan-400/40 font-mono text-xs text-right">
      <div>ABOUT.PAGE</div>
      <div>STATUS: PUBLIC</div>
    </div>
  </main>
</Layout>

<style>
  .glow {
    text-shadow:
      0 0 10px rgba(0, 255, 255, 0.5),
      0 0 20px rgba(0, 255, 255, 0.3),
      0 0 40px rgba(0, 255, 255, 0.2);
  }
</style>
